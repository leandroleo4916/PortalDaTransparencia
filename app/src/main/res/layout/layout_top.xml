<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".views.camara.CamaraFragment">

    <ImageView
        android:id="@+id/imageView_back"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/textView_description_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_title_top"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/view_6"
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:layout_marginTop="10dp"
        android:background="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_description_top" />

    <TextView
        android:id="@+id/textView_title_top"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:text="Cotas - CÃ¢mara"
        android:textColor="@color/purple_700"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView_filter"
        app:layout_constraintStart_toEndOf="@+id/imageView_back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_description_top"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:text="@string/ranking_de_gastos"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/textView_title_top"
        app:layout_constraintTop_toBottomOf="@+id/textView_title_top" />

    <ImageView
        android:id="@+id/imageView_filter"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_no_filter_dark"
        app:layout_constraintBottom_toBottomOf="@+id/textView_description_top"
        app:layout_constraintEnd_toStartOf="@+id/imageView_option_or_question"
        app:layout_constraintTop_toTopOf="@+id/textView_title_top"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageView_option_or_question"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_question"
        app:layout_constraintBottom_toBottomOf="@+id/textView_description_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_title_top"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>