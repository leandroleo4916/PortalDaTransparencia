<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_year"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:scrollbars="none"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:checkable="true"
            android:checked="true"
            android:text="Todos"
            android:visibility="gone"
            android:textColor="@color/back_chip_select_text"
            app:chipStrokeColor="@color/purple_700"
            app:chipStrokeWidth="1.5dp"
            app:chipBackgroundColor="@color/back_chip_select" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_2023"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:checked="true"
            android:text="2023"
            android:textColor="@color/back_chip_select_text"
            app:chipStrokeColor="@color/purple_700"
            app:chipStrokeWidth="1.5dp"
            app:chipBackgroundColor="@color/back_chip_select" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_2022"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:checked="false"
            android:text="2022"
            android:textColor="@color/back_chip_select_text"
            app:chipStrokeColor="@color/purple_700"
            app:chipStrokeWidth="1.5dp"
            app:chipBackgroundColor="@color/back_chip_select" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_2021"
