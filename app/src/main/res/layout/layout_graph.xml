<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@color/white">

    <View
        android:id="@+id/view_top"
        android:layout_width="wrap_content"
        android:layout_height="1.2dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="16dp"
        android:background="@color/purple_100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_top"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:gravity="center"
        android:text="$ 700 mi"
        android:textColor="@color/purple_700"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view_top"
        app:layout_constraintEnd_toStartOf="@+id/view_top"
        app:layout_constraintTop_toTopOf="@+id/view_top"
        app:layout_constraintVertical_bias="0.6" />

    <View
        android:id="@+id/view_top_bellow"
        android:layout_width="wrap_content"
        android:layout_height="1.2dp"
        android:layout_marginStart="84dp"
        android:background="@color/purple_100"
        app:layout_constraintBottom_toTopOf="@+id/view_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_top" />

    <TextView
        android:id="@+id/text_top_bellow"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:gravity="center"
        android:text="$ 560 mi"
        android:textColor="@color/purple_700"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view_top_bellow"
        app:layout_constraintEnd_toStartOf="@+id/view_top_bellow"
        app:layout_constraintTop_toTopOf="@+id/view_top_bellow"
        app:layout_constraintVertical_bias="0.6" />

    <View
        android:id="@+id/view_medium"
        android:layout_width="wrap_content"
        android:layout_height="1.2dp"
        android:layout_marginStart="84dp"
        android:background="@color/purple_100"
        app:layout_constraintBottom_toTopOf="@+id/view_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_top" />

    <TextView
        android:id="@+id/text_medium"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:text="$ 420 mi"
        android:textColor="@color/purple_700"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view_medium"
        app:layout_constraintEnd_toStartOf="@+id/view_medium"
        app:layout_constraintTop_toTopOf="@+id/view_medium" />

    <View
        android:id="@+id/view_medium_bellow"
        android:layout_width="wrap_content"
        android:layout_height="1.2dp"
        android:layout_marginStart="84dp"
        android:background="@color/purple_100"
        app:layout_constraintBottom_toTopOf="@+id/view_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_medium" />

    <TextView
        android:id="@+id/text_medium_bellow"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:text="$ 280 mi"
        android:textColor="@color/purple_700"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view_medium_bellow"
        app:layout_constraintEnd_toStartOf="@+id/view_medium_bellow"
        app:layout_constraintTop_toTopOf="@+id/view_medium_bellow" />

    <View
        android:id="@+id/view_bottom"
        android:layout_width="wrap_content"
        android:layout_height="1.2dp"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="36dp"
        android:background="@color/purple_100"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_bottom"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:text="$ 140 mi"
        android:textColor="@color/purple_700"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view_bottom"
        app:layout_constraintEnd_toStartOf="@+id/view_bottom"
        app:layout_constraintTop_toTopOf="@+id/view_bottom" />

    <View
        android:id="@+id/view"
        android:layout_width="1.2dp"
        android:layout_height="240dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="8dp"
        android:background="@color/purple_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:layout_marginBottom="34dp"
        android:layout_marginStart="40dp"
        android:background="@color/purple_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_graph"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/recycler_graph_gasto" />

</androidx.constraintlayout.widget.ConstraintLayout>